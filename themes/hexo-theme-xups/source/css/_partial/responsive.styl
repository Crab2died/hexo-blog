/*!
 * 响应式媒体查询
 */
@media screen and (min-width: 1440px)
  .container
    max-width 1340px
  .catalog
    width calc((100% - 1340px) / 2 - 30px)
  .bulletin
    max-width 1340px
    .bulletin-icon
      display inline-block
      width 30px
    .bulletin-clock
      font-weight: bold
      text-align center
      background-color #ffffff
      width: 350px;
      display inline-block
      margin 0
      padding 0
      position absolute
      top 2px
    .bulletin-content
      display inline-block
      width calc(100% - 360px)
      margin 0
      padding 0
      color #d96209
      marquee
        width 100%
        margin 0
        padding 0
        position relative
        bottom -3px
    .fa
      color #eb8201
      width: 24px;
      font-size: 1.68em;
      text-align: center;
      margin-right: 8px;

  .content
    min-height calc(100vh - 188.5px)

@media screen and (max-width: 1439px) and (min-width: 960px)
  .container
    max-width 1340px
  #particles-js
    display none
  .bulletin
    max-width 1340px
    .bulletin-icon
      display inline-block
      width 30px
    .bulletin-clock
      font-weight: bold;
      text-align center
      width: 355px;
      display inline-block
      margin 0
      padding 0
      position relative
      background-color #ffffff
      top -2px
    .bulletin-content
      display inline-block
      width calc(100% - 360px)
      margin 0
      padding 0
      color #d96209
      marquee
        width 100%
        margin 0
        padding 0
        position relative
        bottom -3px
    .fa
      color #eb8201
      width: 24px;
      font-size: 1.68em;
      text-align: center;
      margin-right: 8px;
  .content
    min-height calc(100vh - 188.5px)


@media screen and (max-width: 959px)
  .container
    margin-bottom 10px
    padding 0 10px
  #particles-js
    display none
  .bulletin
    margin-bottom 10px
    padding 0 10px
    .bulletin-icon
      display none
    .bulletin-clock
      display none
    .bulletin-content
      display inline-block
      width 100%
      margin 0
      padding 0
      color #d96209
      marquee
        width 100%
        margin 0
        padding 0
        position relative
        bottom -3px

  .content
    min-height calc(100vh - 188.5px)

  .sidebar
    display none

  .content-main
    margin-right 0
    padding 20px 10px

  .header
    .header-main
      height auto
      padding-bottom 10px
    .logo
      float none
      width auto
    .profile
      display none
    .menu
      float none
      padding 8px 10px
      border 1px solid rgba(0, 0, 0, .1)
      background-color #fff
      border-top 0
      overflow hidden
      .item
        min-width 50%
        height auto
        line-height 1
        padding 8px 0
        font-size 14px
        text-align center
      .search-item
        display none

  .hidden
    display none

  .dropnav
    position absolute
    display block
    top 12px
    right 20px
    width 40px
    height @width
    padding 0 2px
    line-height @height
    font-size @height
    color #efe0ce
    border 2px solid @color
    border-radius 2px
    z-index 3
    cursor pointer
    &:hover
      opacity .8

  .post
    header .post-title
      font-size 15px
    .post-meta
      text-center()
    .post-content
      .post-excerpt
        margin-right 0
      .post-thumbnail
        display none
      .more a
        position relative
        display block
        padding 6px
        text-center()
      p
        margin 0

  .page-navigator
    padding-left 0
    .page-number
    .space
    .extend
      margin-right 6px

  .page-navigator li
    display inline-block
    margin-right 7px
    opacity .8

  .page-navigator li a
    display block
    padding 2px 8px
    background-color #eee

  .comment
    .list-wrap
      .list
        .user-comment
          .user-comment-header
            .reply
              display block
    .page-nav .more
      display none
