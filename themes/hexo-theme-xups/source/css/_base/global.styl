/*!
 * 全局样式
 */
.container
  max-width 1180px
  _width 1180px
  background-color c-fff
  margin 0 auto 10px
  text-left()
.bulletin
  max-width 1180px
  _width 1180px
  background-color c-fff
  margin 0 auto 10px
  display block
  font-size 16px
  height 26px
  padding 0
  text-left()
  .bulletin-icon
    display inline-block
    width 30px
  .bulletin-content
    display inline-block
    width calc(100% - 36px)
    margin 0
    padding 0
    color #d96b0a
    marquee
      width 100%
      margin 0
      padding 0
  .fa
    color #eb8201
    width: 24px;
    font-size: 1.68em;
    text-align: center;
    margin-right: 8px;

.home
  //margin-top 78px
  background-color c-eee
.btn
  background-color #ff5e52
  border 0
  color c-fff
  opacity .8
  box-sizing border-box
  &:hover
    opacity .75
.btn-ok
  background-color #ff5e52
.btn-cancel
  background-color #51cc87
.form-control
  box-sizing border-box

.browsehappy
  padding 8px 0
  background #fbe3e4
  color #8a1f11
  text-align center
.loading-mask
  position fixed
  top 0
  right 0
  left 0
  bottom 0
  display block
  width 100%
  height 100%
  background-color rgb(255, 255, 255)
  opacity .8
  .loading-icon
    position relative
    top 50%
    left 50%
    width 50px
    height 50px
    margin-top -25px
    margin-left -25px
